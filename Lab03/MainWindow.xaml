<Window x:Class="Lab03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab03"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Viewbox Stretch="Uniform">
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnStart">
                    btnStart
                </Button>
                <TextBlock x:Name="tblabe">
                    tblabe
                </TextBlock>
            </StackPanel>
            <Canvas x:Name="canvas1" Height="300" Width="300" Margin="5"></Canvas>
            <Button x:Name="clearButton" Content="Clear"  Margin="5" Click="clearButton_Click_1"/>
        </StackPanel>
    </Viewbox>
</Window>
